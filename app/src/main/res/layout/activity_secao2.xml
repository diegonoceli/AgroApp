<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="noceli.diego.agroapp.Secao2Act">

            <EditText
                android:id="@+id/edtQ12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Informe Q1 em l/min"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="109dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.503" />

            <EditText
                android:id="@+id/edtP12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Informe p1 em BAR"
                android:inputType="number"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@+id/edtQ12"
                app:layout_constraintHorizontal_bias="0.503" />

            <EditText
                android:id="@+id/edtP22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Informe p2 em BAR"
                android:inputType="number"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/edtP12"
                app:layout_constraintHorizontal_bias="0.503" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:layout_marginTop="47dp"
                app:layout_constraintTop_toBottomOf="@+id/edtP22"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            app:navigationIcon="@drawable/ic_arrowback"
            app:title="Secao2"
            app:titleTextColor="#f8f8f8"></android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>
